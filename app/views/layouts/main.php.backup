    <!-- User Module -->
    <script>
    var UserModule = {
        init: function() {
            this.bindEvents();
        },
        
        bindEvents: function() {
            // User dropdown button click
            $('#user-dropdown-btn').on('click', this.handleDropdownToggle);
            
            // Profile button
            $('#user-profile-btn').on('click', this.handleProfile);
            
            // Settings button
            $('#user-settings-btn').on('click', this.handleSettings);
            
            // Logout button (backup for dropdown)
            $('#user-logout-btn').on('click', this.handleLogout);
        },
        
        handleDropdownToggle: function(e) {
            e.preventDefault();
            // Toggle dropdown manually if Bootstrap dropdown doesn't work
            var dropdownMenu = $('#user-dropdown-menu');
            var isVisible = dropdownMenu.hasClass('show');
            
            if (isVisible) {
                dropdownMenu.removeClass('show');
                $(e.target).removeClass('show');
                $(e.target).attr('aria-expanded', 'false');
            } else {
                dropdownMenu.addClass('show');
                $(e.target).addClass('show');
                $(e.target).attr('aria-expanded', 'true');
                
                // Close dropdown when clicking outside
                $(document).one('click', function(e) {
                    if (!$(e.target).closest('#user-dropdown-btn, #user-dropdown-menu').length) {
                        dropdownMenu.removeClass('show');
                        $('#user-dropdown-btn').removeClass('show').attr('aria-expanded', 'false');
                    }
                });
            }
        },
        
        handleProfile: function(e) {
            e.preventDefault();
            // Show profile modal or navigate to profile page
            UserModule.showNotification('Profile feature coming soon', 'info');
        },
        
        handleSettings: function(e) {
            e.preventDefault();
            // Show settings modal or navigate to settings page
            UserModule.showNotification('Settings feature coming soon', 'info');
        },
        
        handleLogout: function(e) {
            e.preventDefault();
            if (confirm('Apakah Anda yakin ingin keluar?')) {
                window.location.href = this.href;
            }
        },
        
        showNotification: function(message, type) {
            var toastHtml = '<div class="toast align-items-center text-white bg-' + (type === 'success' ? 'success' : type === 'info' ? 'info' : 'danger') + ' border-0" role="alert">' +
                '<div class="d-flex">' +
                '<div class="toast-body">' + message + '</div>' +
                '<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>' +
                '</div>' +
                '</div>';
            
            var toastContainer = $('#globalToastContainer');
            if (toastContainer.length === 0) {
                toastContainer = $('<div id="globalToastContainer" class="toast-container position-fixed top-0 end-0 p-3"></div>');
                $('body').append(toastContainer);
            }
            
            var toastElement = $(toastHtml);
            toastContainer.append(toastElement);
            
            var toast = new bootstrap.Toast(toastElement[0]);
            toast.show();
        }
    };
    
    // Initialize User Module when DOM is ready
    $(document).ready(function() {
        UserModule.init();
    });
    </script>
